    <van-col span="8" custom-class="dark" pid="4">span: 8</van-col>
    <van-col span="8" custom-class="light" pid="4">span: 8</van-col>
    <van-col span="8" custom-class="dark" pid="4">span: 8</van-col>
  </van-row>
</demo-block>

